<%= form_with(model: @problem, local: true, html: {class: 'form-p'}) do |form| %>
  <div class="p-3 mr-3 trix">
    <div class='d-flex align-items-center'>
      <h3 class='mr-3 mb-3'>Category: </h3>
      <%= form.select :category_id, Category.all.map { |c| [c.category, c.id]} %>
    </div>
    <div class="text-area">
      <%= form.rich_text_area :body, label: "What's Your Problem", input_html: { class: "rich-text-input" }, wrapper: false, label_html: {class: "label"}, placeholders: "Your Problem...", autofocus: true %>
    </div>

    <%= hidden_field_tag(:redirect_url, root_path) %>
    <%= form.button :submit, class: "btn comment mt-2" %>
  </div>
<% end %>
